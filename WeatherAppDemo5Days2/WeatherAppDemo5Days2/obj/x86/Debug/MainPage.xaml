<Page
    x:Class="WeatherAppDemo5Days2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherAppDemo5Days2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >
    <Grid  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel>
            <Button x:ConnectionId='8' Name="HamburgerButton"
                    RelativePanel.AlignBottomWithPanel="True"
                                                 
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Height="45"
                    Width="45"
                    Content="&#xE700;"/>

            <Button x:ConnectionId='9' Name="BackButton"
                    RelativePanel.AlignBottomWithPanel="True"
                                            
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Height="45"
                    Width="45"
                    Content="&#xE0A6;" RelativePanel.RightOf="HamburgerButton"/>
            <TextBlock x:ConnectionId='10' Name="TitleTextBlock"
                       RelativePanel.RightOf="BackButton"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="20,5,0,0"/>


            <AutoSuggestBox x:ConnectionId='11' Name="SearchAutoSuggestBox"
                            PlaceholderText="Search for sounds"
                            Width="200"                        
                            QueryIcon="Find"
                                                                          
                                                                                
                            RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True"/>
        </RelativePanel>

        <SplitView x:ConnectionId='2' Name="MySplitView"
                   Grid.Row="1"
                   DisplayMode="CompactOverlay"
                   OpenPaneLength="150"
                   CompactPaneLength="45">
            <SplitView.Pane>
                <ListBox x:ConnectionId='3' SelectionMode="Single"
                                                                    >
                    <ListBoxItem x:ConnectionId='4' Name="WeatherOne">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xEA91;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"/>
                            <TextBlock Text="WeatherOne"
                                       FontSize="18"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='5' Name="WeatherFive">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xEA91;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"/>
                            <TextBlock Text="WeatherFive"
                                       FontSize="18"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='6' Name="WeatherTen">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xEA91;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"/>
                            <TextBlock Text="WeatherTen"
                                       FontSize="18"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame x:ConnectionId='7'  Name="MyFrame"/>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

