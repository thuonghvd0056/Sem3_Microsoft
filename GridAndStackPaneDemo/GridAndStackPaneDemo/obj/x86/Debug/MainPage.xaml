<Page
    x:Class="GridAndStackPaneDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GridAndStackPaneDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel>
            <Button x:ConnectionId='11' Name="FoodButton" RelativePanel.AlignBottomWithPanel="False"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="36"
                    Content="&#xE700;"
                                            />
            
            <Button x:ConnectionId='12' Name="BackButton" RelativePanel.RightOf="FoodButton"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="36"
                    Content="&#xE0c4;"
                                            />

            <TextBlock x:ConnectionId='13' Name="TitleTextBlock"
                       RelativePanel.RightOf="BackButton"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="20,5,0,0"/>

            <Button x:ConnectionId='14' Name="SearchButton" 
                    RelativePanel.AlignRightWithPanel="True"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="36"
                    Content="&#xE1A3;"/>

            <TextBox x:ConnectionId='15' Name="SearchBox"
                     RelativePanel.LeftOf="SearchButton"
                     Height="50"
                     Width="200"
                     FontSize="24"
                     PlaceholderText="Search"/>
        </RelativePanel>

        <SplitView x:ConnectionId='2' Grid.Row="1"
                   Name="MySplitView"
                   DisplayMode="CompactOverlay"
                   OpenPaneLength="400"
                   CompactPaneLength="55">
            <SplitView.Pane>
                <ListBox x:ConnectionId='3' SelectionMode="Single"
                                                                    >
                    <ListBoxItem x:ConnectionId='4' Name="Drink">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="36"
                                Text="&#xE80F;"/>
                            <TextBlock FontSize="36"
                                       Margin="20,0,0,0">
                                Home
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='5' Name="Food">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="36"
                                Text="&#xEB44;"/>
                            <TextBlock FontSize="36"
                                       Margin="20,0,0,0">
                                Maps
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='6' Name="Historical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="36"
                                Text="&#xE9D2;"/>
                            <TextBlock FontSize="36"
                                       Margin="20,0,0,0">
                                Historical Weather
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='7' Name="Favorites">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="36"
                                Text="&#xE728;"/>
                            <TextBlock FontSize="36"
                                       Margin="20,0,0,0">
                                Favorites
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='8' Name="New">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="36"
                                Text="&#xF581;"/>
                            <TextBlock FontSize="36"
                                       Margin="20,0,0,0">
                                New
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='9' Name="Send">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="36"
                                Text="&#xE899;"/>
                            <TextBlock FontSize="36"
                                       Margin="20,0,0,0">
                                Send Feedback
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>

            <SplitView.Content>
                <Frame x:ConnectionId='10' Name="MyFrame"/>
            </SplitView.Content>               
        </SplitView>
        

    </Grid>
</Page>

