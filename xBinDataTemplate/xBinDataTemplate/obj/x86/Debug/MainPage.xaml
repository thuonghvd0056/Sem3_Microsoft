<Page x:ConnectionId='1'
    x:Class="xBinDataTemplate.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:xBinDataTemplate"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:xBinDataTemplate.Models"
    mc:Ignorable="d">


    <Page.Resources>
    <DataTemplate                          x:Key="DataTemplate">
        <StackPanel x:ConnectionId='2' HorizontalAlignment="Center">
            <Image x:ConnectionId='3' Width="170"                             />
            <TextBlock x:ConnectionId='4' FontSize="16"                       HorizontalAlignment="Center"/>
        </StackPanel>
    </DataTemplate>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <GridView x:ConnectionId='5'                              
                  IsItemClickEnabled="True"
                                                
                  ItemTemplate="{StaticResource DataTemplate}">
        </GridView>

        <TextBlock x:ConnectionId='6' Grid.Row="1" Name="ResultTextBlock" FontSize="24" Foreground="Red" FontWeight="Bold" Margin="0,20,0,0"/>
    </Grid>
</Page>

